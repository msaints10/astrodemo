---
import Header from "../components/Header.astro";
import { ViewTransitions } from "astro:transitions";

interface Props {
  // typescript
  title: string;
}

// Astro es una variable global que contiene información sobre el proyecto
// Aquí se puede acceder a Astro.generator, Astro.props, Astro.env, etc.
// Astro.props contiene las propiedades definidas en el archivo astro.config.mjs
const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <ViewTransitions />
  </head>
  <body class="bg-gray-900 min-h-screen pb-32">
    <Header />
    <!-- Aquí se renderiza el contenido de la página -->
    <main class="max-w-5xl px-4 m-auto">
      <slot />
    </main>
    <style is:global>
      html {
        font-family: system-ui, sans-serif;
        background: #13151a;
        background-size: 224px;
        color-scheme: dark light; /* por defecto le estamos diciendo que queremos el modo oscuro color-scheme */
      }
    </style>
  </body><!-- Con is:global podemos indicarle si queremos que estos estilos sean global, sino lo tiene es únicamente de este scope  -->
</html>
